<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<div class="container">  
  <header><h1> USER DETAILS </h1></header>
  <section>				
  <div id="container_demo" >
    <div id="wrapper">
      <div id="login" class="animate form">
          <%= form_for @user, :url => { :action => "update" } do |f| %>
            <h1> EDIT USER </h1>
            <%= render 'shared/errors' %>
            <p> 
              <label for="usernamesignup" class="uname" data-icon="u">Your User Name</label>
              <%= f.text_field :userName%>
            </p>
            <p> 
              <label for="firstnamesignup" class="fname" data-icon="u">Your First Name</label>
              <%= f.text_field :firstName%>
            </p>
            <p> 
              <label for="lastnamesignup" class="lname" data-icon="u">Your Last Name</label>
              <%= f.text_field :lastName%>
            </p>
            <p> 
              <label for="emailsignup" class="youmail" data-icon="e" > Your email</label>
              <%= f.text_field :emailID%>
            </p>
            <p> 
              <label for="rolesignup" class="yourole" data-icon="u" > Your role</label>
              <%= f.text_field :roles%>	
            </p>
            <p> 
            <p class="signin button"> 
              <%= submit_tag "Submit" %>
            </p>  
          <% end %>
        	<%= button_to 'Back', users_path, :class => "button_link", :method => "get" %>
          <%= button_to 'Delete', {:action => "destroy", :id => @user.id}, :class => "button_link", :confirm => "Are you sure?", :method => "delete" %>
        </div>		
      </div>
    </div>  
  </section>
</div>