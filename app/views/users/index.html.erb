<div class="container">  
  <header><h1>Listing users</h1></header>
  <section>
  <div id="container_demo" >
  <table cellpadding="0" cellspacing="0" border="0" class="display" id="usertable">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Email ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Roles</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.userName %></td>
        <td><%= user.emailID %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.roles %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th><input type="text" name="search_userName" value="Search User Names" class="search_init" /></th>
	<th><input type="text" name="search_emailID" value="Search Email ID" class="search_init" /></th>
	<th><input type="text" name="search_firstName" value="Search First Names" class="search_init" /></th>
	<th><input type="text" name="search_roles" value="Search Last Names" class="search_init" /></th>
	<th><input type="text" name="search_grade" value="Search Roles" class="search_init" /></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
     </tfoot>
  </table>
  </div>
  <br />
  <%= link_to 'New User', new_user_path %>
  </section>
</div>