<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<div class="container">  
  <header><h1> SHOW USER DETAILS </h1></header>
  <section>
  <div id="container_demo" >
  <table cellpadding="0" cellspacing="0" border="0" class="display" id="usertable">
    <thead>
      <tr>
        <th> User ID   </th>
        <th> User Name </th>
        <th> Email ID  </th>
        <th> First Name</th>
        <th> Last Name </th>
        <th> Roles     </th>
        <th> Edit      </th>
        <th> Back      </th>
        <th> Back      </th>
      </tr>
    </thead>
    <tbody>
      <tr id="user_<%= @user.id %>">
            <td><%=@user.id%></td>
            <td><%= best_in_place @user, :userName, :type => :input%></td>
            <td><%= best_in_place @user, :emailID, :type => :input%></td>
            <td><%= best_in_place @user, :firstName, :type => :input%></td>
            <td><%= best_in_place @user, :lastName, :type => :input%></td>
            <td><%= best_in_place @user, :roles, :type => :input%></td>
        <td><%= button_to 'Edit', edit_user_path(@user), :class => "button_link", :method => "get"  %></td>
        <td><%= button_to 'Back', users_path, :class => "button_link", :method => "get"  %></td>
        <td><%= button_to 'Delete', {:action => "destroy", :id => @user.id}, :class => "button_link", :confirm => "Are you sure?", :method => "delete" %></td>
      </tr>
    </tbody>
  </table>
  </div>
  </section>
</div>
